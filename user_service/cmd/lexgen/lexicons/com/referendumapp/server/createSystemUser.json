{
  "lexicon": 1,
  "id": "com.referendumapp.server.createSystemUser",
  "defs": {
    "main": {
      "type": "string",
      "description": "Create a system user. Implemented by AppView.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "needsType": true,
          "type": "object",
          "required": ["handle", "email"],
          "properties": {
            "handle": {
              "type": "string",
              "format": "handle",
              "description": "Requested handle for the account."
            },
            "email": {
              "type": "string",
              "format": "email",
              "maxLength": 60
            },
            "displayName": {
              "type": "string",
              "maxLength": 60
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "description": "Account login session returned on successful account creation.",
          "required": ["handle", "did", "apiKey"],
          "properties": {
            "handle": {
              "type": "string",
              "format": "handle"
            },
            "did": {
              "type": "string",
              "format": "did",
              "description": "The DID of the new account."
            },
            "apiKey": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
