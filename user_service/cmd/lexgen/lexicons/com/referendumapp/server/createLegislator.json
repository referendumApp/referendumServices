{
    "lexicon": 1,
    "id": "com.referendumapp.server.createLegislator",
    "defs": {
      "main": {
        "type": "string",
        "description": "Create a legislator. Implemented by PDS.",
        "input": {
          "encoding": "application/json",
          "schema": {
            "needsType": true,
            "type": "object",
            "required": ["handle", "name", "district", "party", "role", "state", "legislature"],
            "properties": {
              "handle": {
                "type": "string",
                "format": "handle",
                "description": "Requested handle for the legislator."
              },
              "name": {
                "type": "string"
              },
              "district": {
                "type": "string"
              },
              "party": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "state": {
                "type": "string"
              },
              "legislature": {
                "type": "string"
              },
              "address": {
                "type": "string"
              },
              "facebook": {
                "type": "string"
              },
              "instagram": {
                "type": "string"
              },
              "twitter": {
                "type": "string"
              },
              "phone": {
                "type": "string",
                "format": "e164"
              },
              "imageUrl": {
                "type": "string"
              },
              "image": {
                  "type": "blob",
                  "accept": ["image/png", "image/jpeg"],
                  "maxSize": 1000000
              }
            }
          }
        },
        "output": {
          "encoding": "application/json",
          "schema": {
            "type": "object",
            "description": "Confirmation returned on successful legislator creation.",
            "required": ["did", "handle"],
            "properties": {
              "did": {
                "type": "string",
                "format": "did"
              },
              "handle": {
                "type": "string",
                "format": "handle"
              }
            }
          }
        }
      }
    }
  }
