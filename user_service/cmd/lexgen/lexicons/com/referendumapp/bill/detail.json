{
  "lexicon": 1,
  "id": "com.referendumapp.bill.detail",
  "defs": {
    "main": {
      "type": "record",
      "description": "Record containing bill details.",
      "key": "lid:identifier:session:legislature",
      "record": {
        "type": "object",
        "required": [
          "identifier",
          "title",
          "legislativeBody",
          "legislature",
          "status",
          "session",
          "statusDate"
        ],
        "properties": {
          "identifier": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "legislativeBody": { "type": "string" },
          "legislature": { "type": "string" },
          "status": {
            "type": "string",
            "enum": [
              "Introduced",
              "Passed",
              "Vetoed",
              "Failed",
              "Prefiled",
              "Engrossed",
              "Enrolled",
              "Override",
              "Chaptered",
              "Refer",
              "Draft",
              "Report Pass",
              "Report DNP"
            ]
          },
          "session": { "type": "string" },
          "statusDate": {
            "type": "string",
            "format": "datetime",
            "description": "Client-declared timestamp when this post was originally created."
          },
          "topic": {
            "type": "array",
            "items": { "type": "string" }
          },
          "currentVersion": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef"
          }
        }
      }
    }
  }
}
